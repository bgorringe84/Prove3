   <%- include ('includes/header.ejs') %>
</head>
<body>
   <%- include ('includes/nav.ejs') %>

   <div class="album py-5 bg-light">
      <div class="container">
         <div class="row">
            <% cars.forEach(car=> { %>
               <div class="col-md-4">
                  <div class="card mb-4 box-shadow">
                     <img src="<%= car.imgUrl %>" class="img-card-responsive" alt="<%= car.name %>">
                     <div class="card-body">
                        <h5 class="card-title">
                        <%= car.name %>
                        <p class="h2" id="price">$<%= car.price %></p>

                     </div>
                     <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                        <a href='/cars/<%= car.number %>' class="btn btn-sm btn-outline-secondary">Details</a>
                        <button type="button" class="btn btn-sm btn-outline-secondary">Add to Cart</button>
                        </div>
                        <small class="text-muted"><%= car.number %></small>
                     </div>
                  </div>
               </div>
            <% }) %>
         </div>
      </div>
   </div>

<%- include ('includes/footer.ejs') %>
